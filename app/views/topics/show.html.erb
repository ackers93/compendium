<div class="page-header">
  <h1 class="page-title"><%= @topic.name %></h1>
  <p class="page-subtitle">Verses associated with this topic</p>
</div>

<div class="content-section">
  <div class="section-header">
    <div class="d-flex justify-between items-center">
      <h2 class="section-title">
        <%= pluralize(@verse_topics.count, 'verse') %> in this topic
      </h2>
      <%= link_to "← Back to Topics", topics_path, class: "btn btn-outline" %>
    </div>
  </div>
  
  <div class="section-content">
    <% if @verse_topics.any? %>
      <div class="topic-verses-list">
        <% @verse_topics.each do |verse_topic| %>
          <div class="topic-verse-item">
            <div class="topic-verse-header">
              <h3 class="topic-verse-reference">
                <%= link_to verse_topic.bible_verse.reference, 
                    bible_verse_show_path(
                      book: verse_topic.bible_verse.book, 
                      chapter: verse_topic.bible_verse.chapter, 
                      verse: verse_topic.bible_verse.verse
                    ), 
                    class: "verse-link font-semibold" %>
              </h3>
              <div class="topic-verse-meta text-sm text-gray-600 mt-1">
                Added by <%= verse_topic.user.display_name %> • <%= time_ago_in_words(verse_topic.created_at) %> ago
              </div>
            </div>
            
            <div class="topic-verse-text mt-3">
              <p class="text-gray-800 italic"><%= verse_topic.bible_verse.text %></p>
            </div>
            
            <% if verse_topic.explanation.present? %>
              <div class="topic-verse-explanation mt-4 p-4 bg-gray-50 rounded-lg border-l-4 border-primary">
                <h4 class="text-sm font-semibold text-gray-700 mb-2">Connection to Topic:</h4>
                <div class="text-sm text-gray-700">
                  <%= verse_topic.explanation %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <p>No verses have been added to this topic yet.</p>
      </div>
    <% end %>
  </div>
</div>

