<div class="page-header">
  <h1 class="page-title">Topics</h1>
  <p class="page-subtitle">Explore verses organized by topic</p>
</div>

<div class="content-section">
  <div class="section-header">
    <div class="d-flex justify-between items-center">
      <h2 class="section-title">All Topics</h2>
    </div>
  </div>
  
  <div class="section-content">
    <% if @topics.any? %>
      <div class="topics-grid">
        <% @topics.each do |topic| %>
          <div class="topic-card">
            <div class="topic-header">
              <h3 class="topic-title">
                <%= link_to topic.name, topic_path(topic) %>
              </h3>
            </div>
            <div class="topic-preview">
              <p class="text-sm text-gray-600">
                <%= pluralize(topic.verses_count || 0, 'verse') %> associated
              </p>
              <% if topic.verse_topics.any? %>
                <% first_verse_topic = topic.verse_topics.first %>
                <p class="verse-preview mt-2">
                  <strong><%= first_verse_topic.bible_verse.reference %></strong>: 
                  <%= truncate(first_verse_topic.bible_verse.text, length: 100) %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <p>No topics have been created yet.</p>
        <p class="text-sm mt-2">
          Start by <%= link_to "browsing verses", bible_verses_books_path, class: "text-blue-600 hover:text-blue-800" %> and adding them to topics.
        </p>
      </div>
    <% end %>
  </div>
</div>

