<div id="<%= dom_id comment %>" class="shadow-lg rounded my-12 px-2 py-3">
    <h1 class="mb-4 text-1xl font-extrabold"><%= comment.user_id %></h1>
    <div class="trix-content"><%= comment.content %></div>
    <% if comment.user_id == current_user.id %>
        <% if comment.commentable_type == "Note" %>
            <div class="edit"><%= button_to 'Edit', edit_note_comment_path(comment.commentable, comment), method: :get, data: { "turbo-frame": "modal" } %></div>
            <div class="delete"><%= button_to 'Delete', note_comment_path(comment.commentable, comment), method: :delete %></div>
        <% elsif comment.commentable_type == "BibleVerse" %>
            <div class="edit"><%= button_to 'Edit', edit_bible_verse_comment_path(comment.commentable, comment), method: :get, data: { "turbo-frame": "modal" } %></div>
            <div class="delete"><%= button_to 'Delete', bible_verse_comment_path(comment.commentable, comment), method: :delete %></div>
        <% end %>
    <% end %>
</div>