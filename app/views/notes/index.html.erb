<div class="page-header">
  <h1 class="page-title">Notes</h1>
  <p class="page-subtitle">Organize your thoughts and ideas</p>
</div>

<div class="content-section">
  <div class="section-header">
    <div class="d-flex justify-between items-center">
      <h2 class="section-title">All Notes</h2>
      <%= link_to "Publish a new note", new_note_path, 
          class: "btn btn-primary", 
          data: { turbo_frame: "modal" } %>
    </div>
  </div>
  
  <div class="section-content">
    <div class="search-form">
      <%= form_with url: notes_list_path, method: :get, class: "d-flex gap-2", data: { turbo_frame: "notes-table" } do |form| %>
        <%= form.text_field :query, placeholder: "Search by title, content, or tags", class: "form-control search-input" %>
        <%= form.button "Search", class: "btn btn-secondary search-button" %>
      <% end %>
    </div>
    
    <%= turbo_frame_tag "notes-table" do %>
      <%= render "notes/table", notes: @notes %>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag "modal" %>