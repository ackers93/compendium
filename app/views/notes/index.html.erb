<div class="page-header">
  <h1 class="page-title">Notes</h1>
  <p class="page-subtitle">Use this to share studies, ideas and spiritual insights.</p>
</div>

<div class="content-section">
  <div class="section-header">
    <div class="d-flex justify-between items-center">
      <h2 class="section-title">
        <% if request.path == drafts_notes_path %>
          My Drafts
        <% else %>
          All Notes
        <% end %>
      </h2>
      <div class="d-flex gap-2">
        <% if current_user %>
          <% if request.path == drafts_notes_path %>
            <%= link_to notes_path, class: "btn btn-outline" do %>
              <i class="fa-solid fa-list"></i>
              View All Notes
            <% end %>
          <% else %>
            <%= link_to drafts_notes_path, class: "btn btn-outline" do %>
              <i class="fa-solid fa-file"></i>
              My Drafts
            <% end %>
          <% end %>
        <% end %>
        <% if current_user&.can_create? %>
          <%= link_to "Publish a new note", new_note_path, 
              class: "btn btn-primary", 
              data: { turbo_frame: "modal" } %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="section-content">
    <div class="search-form">
      <%= form_with url: notes_list_path, method: :get, class: "d-flex gap-2" do |form| %>
        <%= form.text_field :query, placeholder: "Search by title, content, or tags", class: "form-control search-input" %>
        <%= form.button "Search", class: "btn btn-secondary search-button" %>
      <% end %>
    </div>
    
    <%= render "notes/table", notes: @notes %>
  </div>
</div>

<%= turbo_frame_tag "modal" %>