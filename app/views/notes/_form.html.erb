<%= form_with model: note, id: 'note-form', class: 'note-form' do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter note title...' %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: 'form-label' %>
    <%= form.rich_text_area :content, class: 'form-control', style: 'min-height: 200px;' %>
  </div>

  <div class="form-group">
    <%= form.label :tag_list, 'Tags', class: 'form-label' %>
    <%= form.text_field :tag_list, class: 'form-control', placeholder: 'Enter tags separated by commas...' %>
    <div class="form-help">Tags help organize and categorize your notes</div>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>
<% end %>