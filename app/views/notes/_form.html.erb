<%= form_with(model: note, id: "note-form", data: { turbo_frame: params[:direct_edit] ? "_top" : "modal" }) do |form| %>
  <%= hidden_field_tag :direct_edit, params[:direct_edit] if params[:direct_edit] %>
  
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: "form-label" %>
    <%= form.rich_text_area :content, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :tag_list, class: "form-label" %>
    <%= form.text_field :tag_list, value: note.tag_list.to_s, class: "form-input", placeholder: "Enter tags separated by commas" %>
    <small class="form-help">Tags help organize and categorize your notes</small>
  </div>
<% end %>