<%= turbo_frame_tag "verse-comments-search-results" do %>
  <% if @comments.any? %>
    <div class="comments-list">
      <% @comments.each do |comment| %>
        <% verse = comment.commentable %>
        <div class="comment-item mb-4 p-4 bg-gray-50 rounded">
          <div class="comment-header text-xs text-gray-500 mb-2">
            <span class="author-name">
              <%= comment.user&.display_name || "Unknown User" %>
            </span>
            <span class="comment-date">
              • <%= time_ago_in_words(comment.created_at) %> ago
            </span>
            <span class="ml-2">
              • Comment on 
              <%= link_to verse.reference, 
                  bible_verse_show_path(book: verse.book, chapter: verse.chapter, verse: verse.verse),
                  class: "text-blue-600 hover:text-blue-800",
                  data: { turbo_frame: "_top" } %>
            </span>
          </div>
          <div class="comment-content">
            <%= comment.content %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8 text-gray-500">
      <% if @query.present? %>
        <p>No comments on verses found matching "<%= @query %>".</p>
        <p class="text-sm mt-2">
          Try a different search term.
        </p>
      <% else %>
        <p>Start typing to search comments on verses.</p>
      <% end %>
    </div>
  <% end %>
<% end %>
