<!DOCTYPE html>
<html>
  <head>
    <title>Compendium</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "trix", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <script>
      // Global function for flagging content
      function flagContent(contentType, contentId) {
        const reason = prompt("Please explain why you are flagging this content:");
        if (reason && reason.trim() !== '') {
          // Submit the flag via a simple form
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = '/content_flags';
          
          // Add CSRF token
          const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
          const csrfInput = document.createElement('input');
          csrfInput.type = 'hidden';
          csrfInput.name = 'authenticity_token';
          csrfInput.value = csrfToken;
          form.appendChild(csrfInput);
          
          // Add content type ID
          const idInput = document.createElement('input');
          idInput.type = 'hidden';
          if (contentType === 'Note') {
            idInput.name = 'note_id';
          } else if (contentType === 'Comment') {
            idInput.name = 'comment_id';
          } else if (contentType === 'CrossReference') {
            idInput.name = 'cross_reference_id';
          } else if (contentType === 'BibleThread') {
            idInput.name = 'bible_thread_id';
          }
          idInput.value = contentId;
          form.appendChild(idInput);
          
          // Add reason
          const reasonInput = document.createElement('input');
          reasonInput.type = 'hidden';
          reasonInput.name = 'content_flag[reason]';
          reasonInput.value = reason;
          form.appendChild(reasonInput);
          
          document.body.appendChild(form);
          form.submit();
        }
      }
    </script>
  </head>

  <body>
    <nav class="navbar" data-controller="mobile-nav">
      <div class="nav-container">
        <a href="/" class="nav-brand">
          Compendium
        </a>
        
        <!-- Desktop Navigation -->
        <ul class="nav-menu nav-menu-desktop">
          <% if user_signed_in? %>
            <li class="nav-item">
              <a href="/" class="nav-link nav-link-sm">Home</a>
            </li>
            <li class="nav-item">
              <%= link_to notes_path, class: "nav-link nav-link-sm" do %>
                Notes
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to bible_verses_books_path, class: "nav-link nav-link-sm" do %>
                Bible
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to topics_path, class: "nav-link nav-link-sm" do %>
                Topics
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to my_flagged_content_path, class: "nav-link nav-link-sm" do %>
                My Content
                <% review_count = current_user.flagged_content_needing_review_count %>
                <% if review_count > 0 %>
                  <span class="badge badge-warning" style="margin-left: 0.5rem; font-size: 0.7rem;"><%= review_count %></span>
                <% end %>
              <% end %>
            </li>
          <% end %>
          <% if user_signed_in? && current_user.can_manage_users? %>
            <li class="nav-item">
              <a href="/admin/users" class="nav-link nav-link-sm">Admin</a>
            </li>
          <% end %>
        </ul>
        
        <div class="nav-actions nav-actions-desktop">
          <% if user_signed_in? %>
            <span class="user-info">
              <span class="role-badge <%= current_user.role %>"><%= current_user.role&.titleize || 'Viewer' %></span>
            </span>
            <%= link_to 'Profile', edit_user_registration_path, class: 'btn btn-outline' %>
            <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-primary', data: { turbo: false, confirm: 'Are you sure you want to log out?' } %>
          <% else %>
            <%= link_to 'Log In', new_user_session_path, class: 'btn btn-outline' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
          <% end %>
        </div>

        <!-- Hamburger Button -->
        <button class="hamburger" data-mobile-nav-target="hamburger" data-action="click->mobile-nav#toggle" type="button" aria-label="Toggle menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>

        <!-- Mobile Menu -->
        <div class="nav-menu-mobile" data-mobile-nav-target="menu">
          <ul class="mobile-nav-links">
            <li class="mobile-nav-item">
              <a href="/" class="mobile-nav-link" data-action="click->mobile-nav#closeMenu">Home</a>
            </li>
            <li class="mobile-nav-item">
              <%= link_to notes_path, class: "mobile-nav-link", data: { action: "click->mobile-nav#closeMenu" } do %>
                Notes
              <% end %>
            </li>
            <li class="mobile-nav-item">
              <%= link_to bible_verses_books_path, class: "mobile-nav-link", data: { action: "click->mobile-nav#closeMenu" } do %>
                Bible
              <% end %>
            </li>
            <li class="mobile-nav-item">
              <%= link_to topics_path, class: "mobile-nav-link", data: { action: "click->mobile-nav#closeMenu" } do %>
                Topics
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li class="mobile-nav-item">
                <%= link_to my_flagged_content_path, class: "mobile-nav-link", data: { action: "click->mobile-nav#closeMenu" } do %>
                  My Content
                  <% review_count = current_user.flagged_content_needing_review_count %>
                  <% if review_count > 0 %>
                    <span class="badge badge-warning" style="margin-left: 0.5rem;"><%= review_count %></span>
                  <% end %>
                <% end %>
              </li>
            <% end %>
            <% if user_signed_in? && current_user.can_manage_users? %>
              <li class="mobile-nav-item">
                <a href="/admin/users" class="mobile-nav-link" data-action="click->mobile-nav#closeMenu">Admin</a>
              </li>
            <% end %>
          </ul>

          <div class="mobile-nav-actions">
            <% if user_signed_in? %>
              <div class="mobile-user-info">
                <div class="mobile-user-email"><%= current_user.email %></div>
                <span class="role-badge <%= current_user.role %>"><%= current_user.role&.titleize || 'Viewer' %></span>
              </div>
              <%= link_to 'Profile', edit_user_registration_path, class: 'btn btn-outline btn-block', data: { action: "click->mobile-nav#closeMenu" } %>
              <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-block', data: { turbo: false, confirm: 'Are you sure you want to log out?', action: "click->mobile-nav#closeMenu" } %>
            <% else %>
              <%= link_to 'Log In', new_user_session_path, class: 'btn btn-outline btn-block', data: { action: "click->mobile-nav#closeMenu" } %>
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-block', data: { action: "click->mobile-nav#closeMenu" } %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    
    <main class="main-content">
      <div class="container">
        <%= yield %>
      </div>
    </main>
    
    <%= turbo_frame_tag "modal" %>
  </body>
</html>
