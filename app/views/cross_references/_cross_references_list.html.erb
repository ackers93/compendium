<div class="cross-references-list">
  <% if cross_references&.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Connected Verse</th>
            <th>Comments</th>
            <% if current_user %>
              <th>Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% cross_references.each do |cross_ref| %>
            <% 
              # Determine which verse is the "other" one (not the current verse)
              other_verse = cross_ref.source_verse_id == verse.id ? cross_ref.target_verse : cross_ref.source_verse
            %>
            <tr>
              <td>
                <a href="<%= bible_verse_show_path(book: other_verse.book, chapter: other_verse.chapter, verse: other_verse.verse) %>" 
                   class="verse-link">
                  <%= other_verse.book %> <%= other_verse.chapter %>:<%= other_verse.verse %>
                </a>
                <div class="verse-preview text-sm text-gray-600 mt-1">
                  <%= truncate(other_verse.text, length: 100) %>
                </div>
              </td>
              <td>
                <div class="comments-summary" id="comments-summary-<%= cross_ref.id %>">
                  <%= render 'cross_references/comments_summary', cross_ref: cross_ref %>
                </div>
              </td>
              <% if current_user %>
                <td>
                  <% if current_user.can_delete?(cross_ref) %>
                    <%= button_to cross_reference_path(cross_ref), 
                        method: :delete, 
                        class: "btn btn-sm btn-danger",
                        data: { turbo_confirm: "Are you sure you want to remove this cross-reference?" } do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  <% else %>
                    <%= link_to "javascript:void(0)", 
                        onclick: "flagContent('CrossReference', #{cross_ref.id})",
                        class: "text-yellow-600 hover:text-yellow-800 text-sm" do %>
                      <i class="fa-solid fa-flag"></i> Flag
                    <% end %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-8 text-gray-500">
      <p>No cross-references found for this verse.</p>
      <p class="text-sm mt-2">Add a cross-reference to connect this verse to another passage.</p>
    </div>
  <% end %>
</div>
